{
    "name": "angelxmoreno/seo-bakery",
    "description": "A CakePHP plugin for all things SEO",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3",
        "cakephp/migrations": "^3.8",
        "cakephp/app": "^4.4",
        "cakephp/cakephp": "^4.4",
        "cakephp/bake": "^2.9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SeoBakery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SeoBakery\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "coverage": "phpdbg -qrr vendor/bin/phpunit --coverage-html webroot/coverage",
        "sniff": "phpcs --colors -p --standard=PSR12 src/ tests/ config/ docs/ templates/ webroot/",
        "sniff:summary": "phpcs --colors -p --standard=PSR12 --report=summary src/ tests/ config/ docs/ templates/ webroot/",
        "fix": "phpcbf --colors -p --standard=PSR12 src/ tests/ config/ docs/ templates/ webroot/"
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    }
}
