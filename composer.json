{
    "name": "angelxmoreno/seo-bakery",
    "description": "A CakePHP plugin for all things SEO",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3",
        "cakephp/migrations": "^3.8",
        "cakephp/app": "^4.4",
        "cakephp/cakephp": "^4.4",
        "cakephp/bake": "^2.9",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "SeoBakery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SeoBakery\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "coverage": "phpdbg -qrr vendor/bin/phpunit --coverage-html webroot/coverage",
        "check": [
            "@test",
            "@cs-check",
            "@md-check"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "md-check": "phpmd src text ruleset"
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    }
}
